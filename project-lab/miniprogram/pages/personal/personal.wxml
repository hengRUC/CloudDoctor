	<view class="person-top">
		<view class="info-box">
			<view class="head-img">
        <open-data class="head-img" type="userAvatarUrl"></open-data>
      </view>
			<view class="text-box">
				<open-data type="userNickName" lang="zh_CN"></open-data>
				<!-- <text>xxxxxxxxxxxx</text> -->
			</view>
		</view>
		<!-- <view class="ding-box"> -->
