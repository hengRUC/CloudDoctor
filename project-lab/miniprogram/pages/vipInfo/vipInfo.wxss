page {
  width: 100%;
  height: 100%;
  background-color: #0091ff;
}

.container {
  height: 100%;
  display: block;
  align-items: center;
  padding: 0;
}

.person-top{
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
}
.info-box{
  display: flex;
  align-items: center;
}

.text-box{
  margin-left: 20rpx;
}

.text-box text{
  font-size: 30rpx;
  display: block;
}

.head-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%; 
  overflow:hidden;  
}

.infoBlocks {
  width: 90%;
  margin: 30rpx auto;
  background-color:#ffffff;
  border-radius: 40rpx;
  padding: 20rpx;
  display: flex;
  flex-direction:column;
  justify-content: center;
}

.title {
  width: 100%;
  font-weight: bolder;
  /* padding: 10rpx 5rpx; */
  color:#0091ff;
  text-align: center;
  margin-bottom: 10rpx;
}

.details {
  /* text-align: center; */
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction:column;
  justify-content: center;
  /* align-items: center; */
  /* padding: 10rpx 5rpx; */
}

