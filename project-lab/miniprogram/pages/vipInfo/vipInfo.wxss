.reg-box{
  height:100%;
  width:100%;
 
}

.reg-top{
  display:block;
  width: 100%;
}

.reg-mid{
  background-color: white;
  height: 80rpx;
  border-radius: 0 0 100rpx 100rpx;
  position: relative;
  top: -5rpx;
}

.reg-text{
  display: block;
  text-align: center;
  letter-spacing: 15rpx;
  font-size: 50rpx;
  font-weight: 500;
  /* color:#0091ff; */
  
}

.reg-bottom{
  text-align: center;
  /* position: relative;
  top: -90rpx; */
  width: auto;
  /* background-color: #ff0000; */
}

.reg-bottom text{
  display: inline-block;
  background-color: #0091ff;
  color: #fff;
  font-size: 24rpx;
  
  
}

.reg-button{
  margin: 75rpx 20rpx 55rpx 20rpx;
  border-radius: 100rpx;
  background-color: #0091ff;
  border:2rpx solid #fff;
  color: #fff;
}

.phone-button{
  border-radius: 100rpx;
  background-color: #0091ff;
  border:2rpx solid #fff;
  color: #fff;
}

.reg-button-hover{
  background-color: #fff;
  color: #0091ff; 
}




