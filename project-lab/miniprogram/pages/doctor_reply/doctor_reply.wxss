}

.card-button{
  border: 1px solid #ccc;
  border-radius: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.card-button image{
  width:60rpx;
}
.card-button text{
  padding: 20rpx;
  color: #999;
}

.card-button:hover{
  filter: brightness(0.9);
}

.alert{
  display: block;
  color: #9393aa;
  font-size: 26rpx;
  text-align: center;
  margin: 40rpx 0;
}

.star-set{
  text-align: center;
}

.star-set image{
  width: 60rpx;
}

.bottom-card-button{
  border: 1px solid #ccc;
  border-radius: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.bottom-card-button image{
  width:60rpx;
}
.bottom-card-button text{
  padding: 20rpx;
  color: #999;
}

.bottom-card-button:hover{
  filter: brightness(0.9);
}

#pay{
  background-color: #0091ff;
}

#pay text{
  color: #fff; 
}
